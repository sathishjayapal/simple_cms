<% @page_title= "Subjects" %>
<div class="Subject index">
  <h2>Subjects</h2>

  <p>

  <div><%= pluralize(@subjects.size, 'subject') %> found</div>
  </p>
  <p><%= link_to(image_tag('plus_sign.png', :size => '11x11', :alt=>'+') + "Add New Subject", {:action => 'new'}, :class => 'action new') %></p>

  <table class="listing" summary="subject list">
    <tr class="header">

      <th>id</th>
      <th> position</th>
      <th>Subject</th>
      <th>visible</th>
      <th>pages</th>
      <th>Actions</th>
    </tr>
    <% @subjects.each do |subject| %>
        <tr class="<%= cycle('odd','even')%>">
          <td><%= subject.id %></td>
          <td><%= subject.position %></td>
          <td><%= subject.name %></td>
          <td class="center"><%= status_tag(subject.visible) %></td>
          <td class="center"><%= subject.pages.size %></td>
          <td class="actions">
            <%= link_to("Show", {:action => 'show', :id => subject.id}, :class => 'action show') %>
            <%= link_to("Edit", {:action => 'edit', :id => subject.id}, :class => 'action edit') %>
            <%= link_to("Delete", {:action => 'delete', :id => subject.id}, :class => 'action delete') %>
          </td>
        </tr>
    <% end %>
    </tr>
  </table>
</div>