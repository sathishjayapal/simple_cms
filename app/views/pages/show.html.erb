<% @page_title= "Pages" %>
<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="Page show">
  <h2>Show Page</h2>

  <table summary="Page detail view">
    <tr>
      <th>id</th>
      <td><%= @page.id %></td>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= @page.name %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @page.position %></td>
    </tr>
    <tr>
      <th>Visible?</th>
      <td><%= @page.visible ? 'true' : 'false' %></td>
    </tr>
    <tr>
      <th>Content type</th>
      <td><%= @page.subject_id %></td>
    </tr>
    <tr>
      <th>Content</th>
      <td><%= @page.permalink %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @page.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @page.updated_at %></td>
    </tr>
  </table>

</div>
