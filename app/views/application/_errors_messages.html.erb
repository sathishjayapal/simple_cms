<% if object && object.errors.size >0 %>
    <div id="errorExplanation">
      <h2><%= pluralize(object.errors.size, "error") %>Record not saved</h2>

      <p>Errors occured</p>
      <ul>
        <% object.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>

    </div>
<% end %>
