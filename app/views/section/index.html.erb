<% @page_title= "Section" %>
<h2>Section</h2>
<p><div><%= pluralize(@sections.size, 'sections') %> found</div></p>
<p><%= link_to(image_tag('plus_sign.png', :size => '11x11', :alt=>'+') + "Add New section", {:action => 'new'}, :class => 'action new') %></p>

<table class="listing" summary="sections list">
  <tr class="header">

    <th>ID</th>
    <th>Name</th>
    <th>Position</th>
    <th>Visible</th>
    <th>Content Type</th>
    <th>Page ID</th>
  </tr>
  <% @sections.each do |section| %>
      <tr class="<%= cycle('odd','even')%>">
        <td><%= section.id %></td>

        <td><%= section.name %></td>
        <td><%= section.position %></td>
        <td class="center"><%= status_tag(section.visible) %></td>
        <td class="center"><%= section.content_type %></td>
        <td><%= section.page_id %></td>
        <td class="actions">
          <%= link_to("Show", {:action => 'show', :id => section.page_id}, :class => 'action show') %>
          <%= link_to("Edit", {:action => 'edit', :id => section.page_id}, :class => 'action edit') %>
          <%= link_to("Delete", {:action => 'delete', :id => section.page_id}, :class => 'action delete') %>
        </td>
      </tr>
  <% end %>
  </tr>
</table>